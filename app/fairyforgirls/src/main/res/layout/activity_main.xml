<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TableRow>
        <ImageButton
            android:id="@+id/belianochka"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:src="@drawable/belianockamenu"
            android:background="@null"
            />
        </TableRow>

        <TableRow>
            <ImageButton
                android:id="@+id/dikielebedi"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/dikielebedimenu"
                android:background="@null"
                />
        </TableRow>

        <TableRow>
            <ImageButton
                android:id="@+id/duimovochka"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/duimovochkamenu"
                android:background="@null"
                />
        </TableRow>


        <TableRow>
            <ImageButton
                android:id="@+id/bremenskie"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/bremenslkiemenu"
                android:background="@null"
                />
        </TableRow>

    </TableLayout>

</ScrollView>